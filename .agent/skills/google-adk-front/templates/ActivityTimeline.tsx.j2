import React from 'react';
import { CheckCircle2, Circle, Loader2 } from 'lucide-react';

interface ActivityEvent {
  author: string;
  status: 'pending' | 'active' | 'completed';
  timestamp: number;
}

interface ActivityTimelineProps {
  events: ActivityEvent[];
  currentAgent?: string;
}

export const ActivityTimeline: React.FC<ActivityTimelineProps> = ({ events, currentAgent }) => {
  return (
    <div className="flex flex-col space-y-4 p-4 bg-neutral-900/50 rounded-2xl border border-neutral-800">
      <h3 className="text-xs font-bold text-neutral-500 uppercase tracking-widest px-2">
        Agent Activity
      </h3>
      <div className="space-y-6 relative before:absolute before:left-[19px] before:top-2 before:bottom-2 before:w-0.5 before:bg-neutral-800">
        {events.map((event, i) => (
          <div key={i} className="flex items-center gap-4 group">
            <div className="z-10 bg-neutral-900 p-1">
              {event.status === 'completed' ? (
                <CheckCircle2 className="w-5 h-5 text-green-500" />
              ) : event.author === currentAgent ? (
                <Loader2 className="w-5 h-5 text-blue-500 animate-spin" />
              ) : (
                <Circle className="w-5 h-5 text-neutral-700" />
              )}
            </div>
            <div className="flex-1">
              <p className={`text-sm font-medium ${event.author === currentAgent ? 'text-white' : 'text-neutral-500'}`}>
                {event.author}
              </p>
              {event.author === currentAgent && (
                <span className="text-[10px] text-blue-400 font-bold uppercase animate-pulse">
                  Processing...
                </span>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  );
};
