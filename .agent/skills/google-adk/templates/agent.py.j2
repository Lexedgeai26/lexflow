from google.adk.agents import LlmAgent
from google.adk.apps.app import App
from .services.database import db_session_service
from .agents.specialist_agent import specialist_agent

# --- Root Agent ---
root_agent = LlmAgent(
    name="{{ agent_name }}",
    model="{{ model_name }}",
    instruction="""You are the root orchestrator. 
    Delegate specialized tasks to your sub-agents:
    - {{ specialist_name }}: Use this agent for {{ specialist_task }}
    """,
    sub_agents=[specialist_agent]
)

# --- App Instance ---
app = App(
    root_agent=root_agent, 
    name="{{ app_name }}",
    session_service=db_session_service
)
